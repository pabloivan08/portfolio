---
import Bars from "./Bars.astro"

import svgUnderline from '../assets/underline.svg'
import arrowCard from '../assets/arrow-card.svg'

const portfolio = [
  { 
    name: 'Zweet Bazar', desc: `Women’s fashion e-commerce focused on smooth browsing and conversion-driven design.`,
    website: 'https://zweet.click',
    cover: `/zweet-bazar.jpg`,
    alt: 'Chica tomando fotos a ropa de Zweet Bazar'
  },
  { 
    name: 'Elega Construcción', desc: `Digital presence for an architecture firm, designed to communicate trust.`,
    website: 'https://elegaconstruccion.com/',
    cover: `/elega-construccion.webp`,
    alt: 'Elega Construcción'
  },
  { 
    name: 'Blue Moon Head', desc: `Brand created for a Mexican surfer-designer, combining product storytelling with an expressive visual identity.`,
    website: 'https://bluemoonhead.com/',
    cover: `/bluemoon-head.jpg`,
    alt: 'Blue Moon Head'
  },
  { 
    name: 'Ola Inmobiliaria', desc: `Real estate website specialized in high-value properties located in Oaxaca’s tourist areas.`,
    website: 'https://olainmobiliariapxm.com/',
    cover: `/ola-inmobiliaria.webp`,
    alt: 'Ola Inmobiliaria'
  },
]
---


<section class="py-25 space-y-10 px-5" id="work">
    <div class="max-w-md mx-auto relative ">
      <h1 class="text-4xl font-medium text-center">Selected Work</h1>
      <img src={svgUnderline.src} alt="arrow" width="100" class="absolute left-65 -bottom-1" />
    </div>
  
    <div class="max-w-3xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-10"> 
      {portfolio.map(item => ( 
        <a href={item.website} class="flex flex-col bg-white p-5 group relative transition-all duration-200 hover:shadow-[4px_4px_0px_rgba(0,0,0,0.3)]">
          <div class="w-full h-[200px] overflow-hidden border-2">
           <img src={item.cover} alt="" class="w-full h-full object-cover" />
          </div>
          <div class="space-y-1 pt-4">
            <div class="flex pr-2">
              <h2 class="text-xl font-medium flex-1">{item.name}</h2>
              <img src={arrowCard.src} alt="arrow" width="25" />
            </div>
            <p class="mr-20">{item.desc}</p>
          </div>
          <Bars />
        </a>
      ))}
    </div>
</section>